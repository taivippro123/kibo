<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Message Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Left side for Shop messages -->
        <LinearLayout
            android:id="@+id/layout_shop_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start"
            android:visibility="gone">

            <!-- Shop name -->
            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop"
                android:textSize="12sp"
                android:textColor="@color/gray_medium"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-medium"
                android:visibility="gone" />

            <!-- Shop message bubble -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_shop_message_bubble"
                android:padding="12dp"
                android:maxWidth="280dp">

                <TextView
                    android:id="@+id/tv_shop_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    tools:text="Xin chào! Chúng tôi có thể giúp gì cho bạn?" />

            </LinearLayout>

            <!-- Shop message time -->
            <TextView
                android:id="@+id/tv_shop_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/gray_medium"
                android:layout_marginTop="4dp"
                tools:text="10:30" />

        </LinearLayout>

        <!-- Right side for User messages -->
        <LinearLayout
            android:id="@+id/layout_user_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end"
            android:visibility="gone">

            <!-- User name -->
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn"
                android:textSize="12sp"
                android:textColor="@color/gray_medium"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-medium"
                android:visibility="gone" />

            <!-- User message bubble -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_user_message_bubble"
                android:padding="12dp"
                android:maxWidth="280dp">

                <TextView
                    android:id="@+id/tv_user_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"
                    tools:text="Tôi cần hỗ trợ về sản phẩm" />

            </LinearLayout>

            <!-- User message time -->
            <TextView
                android:id="@+id/tv_user_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/gray_medium"
                android:layout_marginTop="4dp"
                android:gravity="end"
                tools:text="10:35" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
