<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="32dp">

            <!-- OTP Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_lock"
                android:layout_marginBottom="24dp"
                android:background="@drawable/otp_icon_background"
                android:padding="20dp"
                android:scaleType="centerInside" />

            <!-- Title -->
            <TextView
                android:id="@+id/text_view_otp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác thực OTP"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/text_view_otp_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chúng tôi đã gửi mã xác thực đến email của bạn"
                android:textSize="16sp"
                android:textColor="@color/gray_medium"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Email Display -->
            <TextView
                android:id="@+id/text_view_email_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="example@email.com"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Hidden Input for OTP -->
        <EditText
            android:id="@+id/edit_text_hidden_otp"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:inputType="number"
            android:maxLength="6"
            android:background="@android:color/transparent"
            android:textColor="@android:color/transparent"
            android:cursorVisible="false"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <!-- OTP Input Section -->
        <LinearLayout
            android:id="@+id/otp_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/otp_container_background"
            android:padding="8dp">

            <!-- OTP Digit 1 -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/text_view_otp_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/otp_input_background"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:text="" />

                <ImageView
                    android:id="@+id/cursor_otp_1"
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/otp_cursor"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- OTP Digit 2 -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/text_view_otp_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/otp_input_background"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:text="" />

                <ImageView
                    android:id="@+id/cursor_otp_2"
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/otp_cursor"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- OTP Digit 3 -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/text_view_otp_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/otp_input_background"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:text="" />

                <ImageView
                    android:id="@+id/cursor_otp_3"
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/otp_cursor"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- OTP Digit 4 -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/text_view_otp_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/otp_input_background"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:text="" />

                <ImageView
                    android:id="@+id/cursor_otp_4"
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/otp_cursor"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- OTP Digit 5 -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/text_view_otp_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/otp_input_background"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:text="" />

                <ImageView
                    android:id="@+id/cursor_otp_5"
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/otp_cursor"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- OTP Digit 6 -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/text_view_otp_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/otp_input_background"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:text="" />

                <ImageView
                    android:id="@+id/cursor_otp_6"
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/otp_cursor"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

        <!-- Timer Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/text_view_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gửi lại mã sau 02:00"
                android:textSize="14sp"
                android:textColor="@color/gray_medium"
                android:fontFamily="sans-serif"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/text_view_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gửi lại"
                android:textSize="14sp"
                android:textColor="@color/primary_color"
                android:fontFamily="sans-serif-medium"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Verify Button -->
        <Button
            android:id="@+id/button_verify"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Xác thực"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_red_background_rounded"
            android:layout_marginBottom="32dp"
            android:elevation="4dp"
            android:enabled="false" />

        <!-- Back to Register -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không nhận được mã? "
                android:textSize="14sp"
                android:textColor="@color/gray_medium" />

            <TextView
                android:id="@+id/text_view_back_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quay lại đăng ký"
                android:textSize="14sp"
                android:textColor="@color/primary_color"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
