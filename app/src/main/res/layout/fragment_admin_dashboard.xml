<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hàng KPI (grid 2-3 cột, bạn set LayoutManager trong code) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_kpis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            tools:listitem="@layout/item_kpi_card" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đơn gần đây"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:textColor="@color/gray_dark" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recent_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_recent_order" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>