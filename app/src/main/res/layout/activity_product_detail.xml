<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Header with back button -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        app:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="16dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                android:tint="@android:color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chi tiết sản phẩm"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Product Image Gallery -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/gray_light">
                
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager_images"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                
                <!-- Image indicators -->
                <LinearLayout
                    android:id="@+id/layout_indicators"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@drawable/indicator_background" />
                
                <!-- Image counter -->
                <TextView
                    android:id="@+id/tv_image_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="16dp"
                    android:background="@drawable/indicator_background"
                    android:padding="8dp"
                    android:text="1/3"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                
            </FrameLayout>

            <!-- Product Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Product Name -->
                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên sản phẩm"
                    android:textSize="20sp"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold"/>

                <!-- Price -->
                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.800.000đ"
                    android:textSize="24sp"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <!-- Brief Description -->
                <TextView
                    android:id="@+id/tv_brief_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mô tả ngắn"
                    android:textSize="14sp"
                    android:textColor="@color/gray_medium"
                    android:layout_marginTop="12dp"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_light"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Full Description Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mô tả chi tiết"
                    android:textSize="16sp"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_full_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mô tả đầy đủ sản phẩm"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"/>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_light"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Specifications Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông số kỹ thuật"
                    android:textSize="16sp"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold"/>

                <!-- Spec Items -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <!-- Connection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Kết nối:"
                            android:textSize="14sp"
                            android:textColor="@color/gray_medium"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_connection"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Wired"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark"/>
                    </LinearLayout>

                    <!-- Layout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Layout:"
                            android:textSize="14sp"
                            android:textColor="@color/gray_medium"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="87%"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark"/>
                    </LinearLayout>

                    <!-- Keycap -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Keycap:"
                            android:textSize="14sp"
                            android:textColor="@color/gray_medium"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_keycap"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="PBT"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark"/>
                    </LinearLayout>

                    <!-- Switch -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Switch:"
                            android:textSize="14sp"
                            android:textColor="@color/gray_medium"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_switch"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Akko CS switch"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark"/>
                    </LinearLayout>

                    <!-- Battery -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Pin:"
                            android:textSize="14sp"
                            android:textColor="@color/gray_medium"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_battery"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Không"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark"/>
                    </LinearLayout>

                    <!-- OS -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Hệ điều hành:"
                            android:textSize="14sp"
                            android:textColor="@color/gray_medium"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_os"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Windows/MacOS"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark"/>
                    </LinearLayout>

                    <!-- LED -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="LED:"
                            android:textSize="14sp"
                            android:textColor="@color/gray_medium"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_led"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Không"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark"/>
                    </LinearLayout>

                    <!-- Screen -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Màn hình:"
                            android:textSize="14sp"
                            android:textColor="@color/gray_medium"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_screen"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Không"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="12dp"
        android:elevation="8dp">

        <!-- Chat button (white with blue icon) -->
        <LinearLayout
            android:id="@+id/btn_chat"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/button_white_outline"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chat"
                android:layout_marginEnd="8dp"
                android:tint="@color/primary_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHAT"
                android:textColor="@color/primary_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

        </LinearLayout>

        <!-- Buy button (red with white text) -->
        <Button
            android:id="@+id/btn_buy"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="2"
            android:text="THÊM VÀO GIỎ HÀNG"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_red_background"
            android:textAllCaps="false"/>
    </LinearLayout>

    <!-- Loading overlay -->
    <FrameLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

