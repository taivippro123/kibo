<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_admin_chat_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_red"
        android:elevation="4dp"
        app:title="Chat với khách hàng"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white" />

    <!-- Customer info header -->
    <LinearLayout
        android:id="@+id/layout_customer_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/light_gray"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_customer_avatar_detail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/bg_circle_avatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tv_customer_name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tv_customer_email_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="customer@example.com"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_conversation_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang hoạt động"
            android:textSize="12sp"
            android:textColor="@color/green"
            android:background="@drawable/bg_status_active"
            android:padding="6dp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Messages list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_admin_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/progress_bar_admin_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Message input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_admin_message_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nhập tin nhắn trả lời..."
            android:background="@drawable/bg_message_input"
            android:padding="12dp"
            android:textSize="14sp"
            android:maxLines="3"
            android:inputType="textMultiLine|textCapSentences" />

        <ImageButton
            android:id="@+id/btn_admin_send_message"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_send"
            android:background="@drawable/bg_send_button"
            android:contentDescription="Gửi tin nhắn" />

    </LinearLayout>

</LinearLayout>
