<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <!-- Stage 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/checkStage1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/circle_unchecked" />

            <TextView
                android:id="@+id/tv_stage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Đã vận chuyển"
                android:textColor="@color/gray_dark"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Line -->
        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_light" />

        <!-- Stage 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/checkStage2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/circle_unchecked" />

            <TextView
                android:id="@+id/tv_stage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Đang giao hàng"
                android:textColor="@color/gray_dark"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Line -->
        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_light" />

        <!-- Stage 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/checkStage3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/circle_unchecked" />

            <TextView
                android:id="@+id/tv_stage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Đã giao hàng"
                android:textColor="@color/gray_dark"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

